@import "../mall/mall-template.wxss";

.mall-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container{
    margin: 0  auto 20rpx;
}

.mall-head {
  padding: 30rpx 20rpx 22rpx;
  display:flex;
  flex-direction: row;
  justify-content:space-between;
}

.slogan {
  font-size: 24rpx;
}

.more {
